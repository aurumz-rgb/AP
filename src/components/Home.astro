---
import { useEffect } from "preact/hooks";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>AccessPaper | Free Research Articles</title>
  <meta name="description" content="AccessPaper helps you find free, legal full-text research articles instantly using DOI search. Trusted sources include Unpaywall, arXiv, bioRxiv, PubMed Central, and more." />
  <meta name="keywords" content="research papers, free articles, DOI, open access, academic research, scholarly articles, Unpaywall, arXiv, PubMed" />
  <meta name="author" content="Aurumz" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href="https://accesspaper.vercel.app" />
  <link rel="icon" href="/favicon.png" type="image/png" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://accesspaper.vercel.app">
  <meta property="og:title" content="AccessPaper | Free Research Articles">
  <meta property="og:description" content="Find free, legal full-text research articles instantly using DOI search. Trusted sources include Unpaywall, arXiv, bioRxiv, PubMed Central, and more.">
  <meta property="og:image" content="https://raw.githubusercontent.com/aurumz-rgb/AP/main/public/og-image.png">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="https://accesspaper.vercel.app">
  <meta name="twitter:title" content="AccessPaper | Free Research Articles">
  <meta name="twitter:description" content="Find free, legal full-text research articles instantly using DOI search. Trusted sources include Unpaywall, arXiv, bioRxiv, PubMed Central, and more.">
  <meta name="twitter:image" content="https://raw.githubusercontent.com/aurumz-rgb/AP/main/public/og-image.png">
</head>

<body>
<div id="container">
  <img id="background" src="/background.svg" alt="" fetchpriority="high" />

  <main>
    <section id="hero">
    </section>
  </main>

  <!-- Full-width Bottom Panel -->
  <footer id="bottom-panel">
    <div class="panel-content">
      <span> Version v2.0.0</span>
      <a href="https://github.com/aurumz-rgb/AP" target="_blank" class="center-link">Open Source</a>
      <a class="made-by" href="developer.html" target="_blank">Made with â™¡ by Aurumz</a>
    </div>
  </footer>
</div>

<style>
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    background-color: #1e1e1e;
    overflow: hidden; /* Prevent scrolling */
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    filter: blur(1px);
    object-fit: cover;
  }

  #container {
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
    height: 100%;
  }

  main {
    height: calc(100vh - 40px); /* subtract bottom panel height */
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 80px;
    box-sizing: border-box;
    overflow: hidden; /* Prevent internal scroll */
    width: 100%;
  }

  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo-placeholder {
    margin-bottom: 1px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Bottom Full-Width Panel */
  #bottom-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #1e1e1eff;
    color: #ccc;
    padding: 8px 0;
    z-index: 10;
  }

  #bottom-panel .panel-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    position: relative;
    flex-wrap: wrap;
    gap: 4px; 
  }

  #bottom-panel a {
    color: #ccc;
    text-decoration: none;
    font-weight: 500;
  }

  #bottom-panel a:hover {
    text-decoration: underline;
  }

  .center-link {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .made-by {
    font-size: 12px;
    color: #ccc;
    font-weight: 500;
  }

  /* RESPONSIVENESS */
  @media (max-width: 1024px) {
    main {
      padding-top: 70px;
    }

    #bottom-panel .panel-content {
      font-size: 11px;
    }
  }

  @media (max-width: 768px) {
    main {
      padding-top: 60px;
    }

    #bottom-panel .panel-content {
      font-size: 11px;
      gap: 3px;
    }

    .center-link {
      position: static;
      transform: none;
      order: 2;
      text-align: center;
      width: 100%;
    }

    #bottom-panel .panel-content span {
      flex: 1 1 45%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    main {
      padding-top: 50px;
    }

    #bottom-panel .panel-content {
      flex-direction: column;
      gap: 2px; /* reduce extra height to prevent scroll */
    }

    #bottom-panel .panel-content span {
      flex: 1 1 100%;
      text-align: center;
    }

    .center-link {
      width: 100%;
    }
  }
</style>

<script type="module">
  // Call your serverless API to log visit
  if (typeof window !== "undefined") {
    fetch("/api/log-visit", { method: "GET" })
      .then(res => res.json())
      .then(data => console.log("Visit logged:", data))
      .catch(err => console.error("Logging failed:", err));
  }
</script>
</body>
